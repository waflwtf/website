---
layout: default.njk
---
<article class="flex flex-col items-center bg-white p-2 border-yellow-300 border-4">
    <h1 class="font-extrabold text-4xl md:text-5xl mb-2">
        {{ title }}
    </h1>
    <div class="flex flex-col md:flex-row md:gap-2 text-sm mb-4">
        <div>
            <img class="inline-block h-4 w-4" src="/assets/icons/icon-globe.svg" alt="">
            <span class="sr-only">
                Ver√∂ffentlich am
            </span>
            <time datetime="{{ date | formatDateISO }}">
                {{ date | formatDateDisplay }}
            </time>
        </div>
        <div>
            <img class="inline-block h-4 w-4" src="/assets/icons/icon-mic.svg" alt="">
            <span class="sr-only">
                Aufgenommen am
            </span>
            <time datetime="{{ media.recordingDate | formatDateISO }}">
                {{ media.recordingDate | formatDateDisplay }}
            </time>
        </div>
    </div>

    {%- set audioSrc = media.content | absoluteUrl(podcast.storageUrl) -%}
    {%- set cover = media.image if media.image else podcast.channelImage -%}

    <div class="max-w-prose mb-4">
        {% renderTemplate "webc", {
            title: title,
            audioSrc: audioSrc,
            cover: cover
        } %}
        <podcast-player :title="title" :src="audioSrc" :cover="cover"></podcast-player>
        {% endrenderTemplate %}
    </div>
    <div class="prose">
        {{ content | safe }}
    </div>
</article>
