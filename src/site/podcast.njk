---
layout: page.njk
title: "Podcast"
eleventyNavigation:
    key: Podcast
    order: 1
---
<ul class="flex flex-col w-full gap-4 max-w-prose">
    {%- for podcastEpisode in collections.podcast | reverse -%}
        <li class="block p-2 border-2 border-yellow-400 rounded">
            <div class="text-center">
            <a class="inline-block p-2 text-xl underline" href="{{ podcastEpisode.url }}">
                {{ podcastEpisode.data.media.episode }} - {{ podcastEpisode.data.title }}
            </a>
            </div>
            <div class="flex flex-row flex-wrap justify-center gap-2 mb-4 text-sm">
                <div class="flex items-center gap-1">
                    <img class="inline-block w-4 h-4" src="/assets/icons/icon-globe.svg" alt="">
                    <span class="sr-only">
                        Ver√∂ffentlich am
                    </span>
                    <time datetime="{{ podcastEpisode.data.date | formatDateISO }}">
                        {{ podcastEpisode.data.date | formatDateDisplay }}
                    </time>
                </div>
                <div class="flex items-center gap-1">
                    <img class="inline-block w-4 h-4" src="/assets/icons/icon-mic.svg" alt="">
                    <span class="sr-only">
                        Aufgenommen am
                    </span>
                    <time datetime="{{ podcastEpisode.data.media.recordingDate | formatDateISO }}">
                        {{ podcastEpisode.data.media.recordingDate | formatDateDisplay }}
                    </time>
                </div>
            </div>
            <p class="prose">
                {{ podcastEpisode.data.media.description | safe }}
            </p>
        </li>
    {%- endfor -%}
</ul>
