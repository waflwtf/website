{
  "name": "wafl-website",
  "scripts": {
    "clean": "rimraf ./_site",
    "start": "cross-env NODE_ENV=development npm-run-all clean build:styles --parallel start:styles start:eleventy --print-label",
    "start:eleventy": "eleventy --serve",
    "start:styles": "postcss --watch ./src/styles/index.css -o ./_site/styles/index.css",
    "build": "cross-env NODE_ENV=production run-s clean build:styles eleventy",
    "build:styles": "postcss ./src/styles/index.css -o ./_site/styles/index.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-beta.1",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-webc": "^0.8.1",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "date-fns": "^2.29.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-hash": "^3.0.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4"
  }
}
